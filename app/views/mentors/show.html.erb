<div id="podcast_show">
     <div id="show_banner">
     	<div class="wrapper_skinny">
         <h1><%= @mentor.title %></h1>
	       <p class="description"><%= @mentor.description %></p>
               <% unless @mentor.blog.blank? %>
	        <a href="<%= @mentor.blog %>" class="subscribe_link">blog</a>
               <% end %>
               <% unless @mentor.facebook.blank? %>
                <a href="<%= @mentor.facebook %>" class="subscribe_link">facebook</a>
               <% end %>

               <% unless @mentor.twitter.blank? %>
                <a href="<%= @mentor.twitter %>" class="subscribe_link">twitter</a>
               <% end %>

               <% unless @mentor.linkedin.blank? %>
                <a href="<%= @mentor.linkedin %>" class="subscribe_link">linkedin</a>
               <% end %>
     	</div>      
     </div>

     <div id="breadcrumb">
      <%= link_to mentors_path do %>
        All podcasts
       <span>/</span>
        <%= @mentor.category %>
        <span>/</span>
        <%= @mentor.category %>
      <% end %>
     </div>

     <div id="episodes">
        <div class="wrapper_skinny">
          <ul class="cf">
           <% @episodes.each do |episode| %>
            <li class="cf">
              <div class="episode_thumbnail">
                 <a href="#">
                  <%= image_tag episode.episode_thumbnail.url(:medium) %>
                 </a>
              </div>
              <div class="episode_overview">
                <h2><%= link_to episode.title, mentor_episode_path(@mentor, episode) %></h2> 	
                 <p class="description">
                 <% truncate(episode.description, length: 160) %>
                 </p>
              </div>	
            </li>
           <% end %>
          </ul>
        </div>
     </div>
    </div>

