<%= render 'layouts/header' %>

  <div id="podcast_show">
   <div id="show_banner">
    <div class="wrapper_skinny">
       <h1><%= @mentor.title %> Dashboard</h1>
    </div>
   </div>
   <div id="links">
     <div class="wrapper_skinny">
      <ul>
        <li><%= link_to "Posts", root_path %></li>
        <li><%= link_to "New Post", new_mentor_episode_path(@mentor, @episode) %></li>
        <li><% link_to "Account Settings", edit_mentor_registration_path %></li>
        <li><%= link_to "View Mentor", mentor_path(current_mentor) %></li>
      </ul>
     </div>
    </div>

     <div id="episodes">
        <div class="wrapper_skinny">
          <ul class="cf">
            <% @episodes.each do |episode| %>
            <li class="cf">
              <div class="episode_thumbnail">
                 <a href="<%= link_to episode.title, mentor_episode_path(@mentor, episode)  %>">
                  <%= image_tag episode.episode_thumbnail.url(:medium) %>
                 </a>
              </div>
              <div class="episode_overview">
                <h2><%= link_to episode.title, mentor_episode_path(@mentor, episode) %></h2> 	
                 <p class="description">
                   <%= truncate(episode.description, length:160) %>
                 </p>
               <div class="authorized_links">
                 <%= link_to "Edit", edit_mentor_episode_path(@mentor, episode) %>
                 <%= link_to "Delete", mentor_episode_path(@mentor, episode), method: :delete, data: {confirm: "Are you sure?"} %>         
               </div>
              </div>	
            </li>
           <% end %>
          </ul>
        </div>
     </div>
    </div>

  </div>
